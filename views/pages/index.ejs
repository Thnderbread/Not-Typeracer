<!doctype html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta http-equiv="X-UA-Compatible" content="IE-edge" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <script src="/socket.io/socket.io.js"></script>
  <script src="https://cdn.tailwindcss.com"></script>
  <script src="https://unpkg.com/htmx.org@2.0.0" integrity="sha384-wS5l5IKJBvK6sPTKa2WZ1js3d947pvWXbPJ1OmWfEuxLgeHcEbjUUA5i9V5ZkpCw" crossorigin="anonymous">
  </script>
  <title>NotTyperacer</title>
</head>

<body>
  <h1>Hello</h1>
  <p>test</p>
  <div id="main">
    <div id="error"></div>
    <button class="rounded-md border-2 border-solid border-gray-700 p-1" hx-post="/api/rooms/create" hx-target="#main" hx-swap="outerHTML" hx-trigger="click" hx-debug="true">
      Create room
    </button>
    <button class="rounded-md border-2 border-solid border-gray-700 p-1" onclick="alert('hey')">Connect!</button>
    <button id="ping" class="rounded-md border-2 border-solid border-gray-700 p-1">Ping!</button>
    <div id="room"></div>
  </div>
</body>
<script>
  // htmx.logAll();
  document.addEventListener("DOMContentLoaded", (event) => {
    document.body.addEventListener("htmx:beforeSwap", (e) => {
      if (e.detail.xhr.status === 422) {
        e.detail.shouldSwap = true;
        e.detail.isError = false;
      }
    });
    const roomId = new URL(window.location.href).searchParams.get("room")
    if (roomId) {
      console.log("In room ept")
      htmx.ajax("POST", `/api/rooms/join/${roomId}`, {
        target: "#main",
        swap: "outerHTML"
      });
    }
  });
</script>

</html>
